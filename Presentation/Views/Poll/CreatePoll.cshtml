@model Domain.Models.Poll

@{
    ViewData["Title"] = "Create New Poll";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create New Poll</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CreatePoll">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Poll Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter poll title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Option1Text" class="control-label">Option 1 Text</label>
                    <input asp-for="Option1Text" class="form-control" placeholder="Enter text for Option 1" />
                    <span asp-validation-for="Option1Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Option2Text" class="control-label">Option 2 Text</label>
                    <input asp-for="Option2Text" class="form-control" placeholder="Enter text for Option 2" />
                    <span asp-validation-for="Option2Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Option3Text" class="control-label">Option 3 Text</label>
                    <input asp-for="Option3Text" class="form-control" placeholder="Enter text for Option 3" />
                    <span asp-validation-for="Option3Text" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg">Create Poll</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to Poll List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
